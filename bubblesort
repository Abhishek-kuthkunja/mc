	AREA BUB,CODE,READONLY
ENTRY
	LDR R1,=NUM
	LDR R3,=0X40000000
	MOV R4,#4
LOOP
	LDR R2,[R1],#4
	STR R2,[R3],#4
	SUBS R4,R4,#1
	BNE LOOP
	MOV R4,#4
LOOP1
	MOV R5,#0X40000000
	SUBS R4,R4,#1
	MOVNE R0,R4
	BEQ STOP
LOOP2
	ADD R8,R5,#4
	LDR R6,[R5]
	LDR R7,[R8]
	CMP R6,R7
	STRPL R6,[R8]
	STRPL R7,[R5]
	ADD R5,R5,#4
	SUBS R0,R0,#1
	BNE LOOP2
	CMP R4,#0
	BNE LOOP1
STOP B STOP
NUM DCD 2,5,4,1
	END
